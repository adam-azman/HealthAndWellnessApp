<!-- res/layout/activity_nicotine_tracking.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/image2">

    <EditText
        android:id="@+id/editTextNicotineIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter nicotine intake (mg)"
        android:inputType="number"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnSaveNicotineIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Intake"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nicotineLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nicotine Intake Log:"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Nicotine Intake Today: 0 mg"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
